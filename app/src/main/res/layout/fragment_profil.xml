    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/EnteteLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_view_for_menu_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ProfilImage"
                android:layout_width="73dp"
                android:layout_height="62dp"
                android:backgroundTint="#786B6B"
                android:clickable="true"
                android:src="@drawable/loggin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ProfilName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=" user name "
                android:textSize="75px"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ProfilImage"
                app:layout_constraintStart_toStartOf="@+id/ProfilImage"
                app:layout_constraintTop_toBottomOf="@+id/ProfilImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <Button
            android:id="@+id/MesReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="My Reservations" />

        <Button
            android:id="@+id/signOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="SingOut" />

    </LinearLayout>


</FrameLayout>